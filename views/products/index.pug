extends ../layouts/common

block content
	h3.mb-5.mt-3 Products	
	.row
		each product in products
			.col-lg-3.col-sm-6
				.card
					img.card-img-top(src= product.image, alt='#')
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href=`/cart/add/${product._id}/${page}`) Add to cart

	include ../layouts/paginationTwo

block scripts
	script(src="/scripts/product.js")

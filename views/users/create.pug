extends ../layouts/common

block content
	h1 New user
	if (errors)
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create", method="POST")
		.form-group
			label(for="name") Name
			input(type="text", id="name", name="name", class="form-control", value= values ? values.name : '')
		.form-group
			label(for="phone") Phone
			input(type="text", id="phone", name="phone", class="form-control", value= values ? values.phone : '')
		button.btn.btn-primary Create